#root
    text-align: center

#root-container
    margin-top: 50px

#search, #graph-config
    display: inline-block

.file-form
    display: flex
    justify-content: center
    align-items: center

.file-form > label
    justify-content: center
    margin-right: 10px

#search-tooltip-icon
    pointer-events: auto

.tippy-tooltip-content
    text-align: left

.tippy-tooltip-content > p:not(:last-child)
    margin-bottom: 20px

.tippy-tooltip-content img
    display: block
    margin-top: 10px
    width: 400px
    height: auto

#search-tooltip-template
    display: none

#content
    margin-top: 20px
    margin-bottom: 10px
    min-height: 300px
    max-width: 90%

#content .is-loading
    border: 0

.footer
    display: flex
    justify-content: center
    align-items: center
    /* position: absolute; */
    /* bottom: 0; */
    background-color: white

.footer > span
    margin-right: 5px

.footer > a
    line-height: 0

.footer img
    padding: 2px
    width: 30px
    height: auto
    border: 1px solid gray
    border-radius: 50%

.error .notification-title
    color: red

.notification-title
    font-weight: bold

.notification-details
    font-size: 13px
    white-space: pre-wrap

#graph-container .tabs
    margin-bottom: 20px

#graph-config
    margin-bottom: 10px

#graph-config p
    white-space: nowrap

#graph-config .field-label
    margin-right: 10px

#movie-tooltip
    position: absolute
    visibility: hidden

@media screen and (min-width: 800px)
    #movie-tooltip
        top: 235px
        right: 0px
        visibility: visible
        padding: 5px 7px
        border-radius: 7px
        background-color: black
        color: white
        text-align: left
        font-size: 12px
        opacity: 0.8

    #movie-tooltip p
        width: 165px

    #movie-tooltip.hidden
        visibility: hidden
